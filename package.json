{
  "name": "nomidot",
  "author": "Parity Technologies <admin@parity.io>",
  "description": "Staking Portal for Polkadot",
  "license": "Apache-2.0",
  "private": true,
  "repository": "https://github.com/yjkimjunior/Nomidot",
  "scripts": {
    "build":"yarn clean && lerna run build --stream --scope @substrate/context --scope @substrate/ui-components --scope @substrate/node-watcher",
    "clean": "rimraf front/**/lib back/**/lib front/**/.cache back/**/.cache",
    "lerna:bump": "lerna version --conventional-commits",
    "lerna:publish": "yarn build && lerna publish from-git",
    "lint": "tsc --noEmit && eslint --ext js,ts,tsx .",
    "start": "cd ./front/gatsby && gatsby develop",
    "storybook": "cd ./front/ui-components && yarn storybook",
    "test": "echo No tests for now."
  },
  "workspaces": {
    "packages": [
      "front/*",
      "back/*"
    ]
  },
  "dependencies": {
    "@polkadot/api": "^1.0.0-beta.15"
  },
  "devDependencies": {
    "@polkadot/dev": "^0.32.13",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "lerna": "^3.18.4",
    "prettier": "1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.5"
  }
}
