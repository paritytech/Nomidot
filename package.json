{
  "name": "nomidot",
  "author": "Parity Technologies <admin@parity.io>",
  "description": "Staking Portal for Polkadot",
  "license": "Apache-2.0",
  "private": true,
  "repository": "https://github.com/yjkimjunior/Nomidot",
  "scripts": {
    "clean": "./scripts/clean-build.sh",
    "prelerna:publish": "yarn clean && lerna exec yarn build --stream --scope @substrate/context --scope @substrate/ui-components --scope @substrate/node-watcher",
    "lerna:bump": "lerna version --conventional-commits",
    "lerna:publish": "lerna publish from-git",
    "lint": "tsc --noEmit && eslint --ext ts,tsx .",
    "start": "cd ./front/gatsby && gatsby develop",
    "storybook": "cd ./front/ui-components && yarn storybook",
    "test": "jest"
  },
  "workspaces": {
    "packages": [
      "front/*",
      "back/*"
    ]
  },
  "devDependencies": {
    "@polkadot/dev": "^0.32.13",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "lerna": "^3.18.4",
    "prettier": "1.19.1",
    "ts-jest": "^24.2.0"
  }
}
